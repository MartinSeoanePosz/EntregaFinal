<div class="user-list">
    {{#each users}}
        <div class="user-card">
            <div class="user-card-info">
                <h3>{{this.firstName}} {{this.lastName}}</h3>
                <p>{{this.email}}</p>
                <p>{{this.role}}</p>
                <p>{{this.lastConnection}}</p>
            </div>
            <div class="user-card-actions">
                <button class="delete-user" data-email="{{this.email}}">Delete</button>
            </div>
        </div>
    {{/each}}
</div>
<button class="delete-unused-users"> Delete old users</button>

<script src="../../js/users.js"></script>